{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "@config/*": ["config/*"],
      "@service/*": ["service/*"],
      "@lib/*": ["lib/*"],
      "@util/*": ["util/*"],
      "@model/*": ["model/*"],
      "@router/*": ["router/v1/*"],
      "@controller/*": ["controller/*"],
      "@middleware/*": ["middleware/*"],
      "@helper/*": ["helper/*"],
      "@db-config/*": ["db-config/*"],
      "@job/*": ["job/*"],
      "@components/*": ["components/*"],
    },
  },
  "include": ["src/**/*.ts", "src/*.ts"],
  "exclude": ["node_modules"]
}
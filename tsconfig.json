{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "@controller/*": ["router/v1/controller/*"],
      "@model/*": ["model/*"],
      "@lib/*": ["lib/*"],
      "@service/*": ["service/*"],
      "@router/*": ["router/v1/*"],
    },
  },
  "include": ["src/**/*.ts", "src/*.ts"],
  "exclude": ["node_modules"]
}